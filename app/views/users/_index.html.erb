 <h2>User info</h2>
      <% if user.profile_image.attached? %>
         <%= image_tag user.profile_image, size: "100x100" %>
      <% else %>
         <%= image_tag 'no_image.jpg', size: "100x100" %>
      <% end %>
      <table class="table">
       <tbody>
         <tr></tr>
          <tr>
	       <th>name</th>
	       <th><%= user.name %></th>
          </tr>
            <tr>
	         <th>introduction</th>
	         <th><%= user.introduction %></th>
	         <th>
	           <%#= render 'relationships/btn',user: user %>
	         </th>
            </tr>
        </tbody>
      </table>