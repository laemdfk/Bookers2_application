<p id="notice"></p>
 <div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
     <%= render "users/index",user: @user %>

   <div class="row">
    <% if @user.id == current_user.id %>
      <%= link_to edit_user_path(current_user.id), class:"btn btn-outline-secondary btn-block" do %>
        <span>
         <i class="fas fa-user-cog"></i>
        </span>
      <% end %>
    <% else %>
       <%= link_to edit_user_path(@user.id), class:"btn btn-outline-secondary btn-block" do %>
        　<span class="fas fa-user-cog"></span>
      　<% end %>
    <% end %>
   </div>


<h2 class="mt-3">New book</h2>
  <%= form_for(@new_book) do |f| %>

  <div class="form-group">
    <%= f.label :title %><br>
    <%= f.text_field :title %><br/>
  </div>

  <div class="form-group">
    <br><%= f.label :opinion %><br/>
        <%= f.text_area :body %><br/>
  </div>

  <div class="form-group">
    <br><%= f.submit 'Create Book',class:"btn btn-success" %><br />
  </div>
 <% end %>
</div>
